<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config" title="Configuração de HMD">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="interpupillary_offset_slider_amount">
						64,0 mm
					</text>
					<slider_bar initial_value="64" name="interpupillary_offset_slider" tool_tip="Distância configurada entre o centro da visão do usuário, em milímetros"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_shape_preset_value">
						Padrão
					</text>
					<slider_bar initial_value="1.0" name="uisurface_shape_preset_slider" tool_tip="Forma da superfície de UI no Modo HMD"/>
				</layout_panel>
				<layout_panel>
					<text name="ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600.0" name="ui_magnification_slider" tool_tip="Amplificação de UI na distância padrão Olho-a-Tela"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_offset_depth_slider_amount">
						0.0
					</text>
					<slider_bar initial_value="0.0" name="uisurface_offset_depth_slider" tool_tip="Desvio à frente da superfície de UI"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="Redefinir valores" name="hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Cancelar" name="hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Salvar" name="hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
