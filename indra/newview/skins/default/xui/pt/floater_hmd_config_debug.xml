<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config_debug" title="Depurar configuração de HMD">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="hmd_config_debug_interpupillary_offset_slider_amount">
						64,0 mm
					</text>
					<slider_bar initial_value="64" name="hmd_config_debug_interpupillary_offset_slider" tool_tip="Distância configurada entre o centro da visão do usuário, em milímetros"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_shape_preset_value">
						1
					</text>
					<slider_bar initial_value="1.0" name="hmd_config_debug_uisurface_shape_preset_slider" tool_tip="Forma da superfície de UI no Modo HMD"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600.0" name="hmd_config_debug_ui_magnification_slider" tool_tip="Amplificação de UI na distância padrão Olho-a-Tela"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_offset_depth_slider_amount">
						0.0
					</text>
					<slider_bar initial_value="0.0" name="hmd_config_debug_uisurface_offset_depth_slider" tool_tip="Desvio à frente da superfície de UI"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_radius_width_slider_amount">
						0.3
					</text>
					<slider_bar initial_value="0.3" name="hmd_config_debug_uisurface_toroid_radius_width_slider" tool_tip="Raio do toroide (largura)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_radius_depth_slider_amount">
						0.6
					</text>
					<slider_bar initial_value="0.6" name="hmd_config_debug_uisurface_toroid_radius_depth_slider" tool_tip="Raio do toroide (profundidade)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_cross_section_radius_width_slider_amount">
						0.5
					</text>
					<slider_bar initial_value="0.5" name="hmd_config_debug_uisurface_toroid_cross_section_radius_width_slider" tool_tip="Raio da secção do toroide (largura)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_cross_section_radius_height_slider_amount">
						0.7
					</text>
					<slider_bar initial_value="0.7" name="hmd_config_debug_uisurface_toroid_cross_section_radius_height_slider" tool_tip="Raio da secção do toroide (altura)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_arc_horizontal_slider_amount">
						1,0 PI
					</text>
					<slider_bar initial_value="1.0" name="hmd_config_debug_uisurface_toroid_arc_horizontal_slider" tool_tip="Arco da superfície de UI (horizontal)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_arc_vertical_slider_amount">
						0.7
					</text>
					<slider_bar initial_value="0.6" name="hmd_config_debug_uisurface_toroid_arc_vertical_slider" tool_tip="Arco da superfície de UI (vertical)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_eye_to_screen_distance_slider_amount">
						41,0 mm
					</text>
					<slider_bar initial_value="41" name="hmd_config_debug_eye_to_screen_distance_slider" tool_tip="Distância do olho à superfície da tela, em milímetros"/>
				</layout_panel>
				<layout_panel>
					<check_box initial_value="true" name="hmd_config_debug_hmd_motion_prediction" tool_tip="A previsão de movimento tenta prever o movimento do dispostivo de cabeça para uma experiência mais suave e menos irregular"/>
					<text name="hmd_config_debug_motion_prediction_delta_slider_amount">
						30 ms
					</text>
					<slider_bar initial_value="30" name="hmd_config_debug_motion_prediction_delta_slider" tool_tip="Especifica quanta previsão deve ser aplicada em milissegundos. Em geral, deve ser abaixo da latência média de renderização"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="Adicionar predefinição" name="hmd_config_debug_hmd_add_preset"/>
				</layout_panel>
				<layout_panel>
					<button label="Remover predefinição" name="hmd_config_debug_hmd_remove_preset"/>
				</layout_panel>
				<layout_panel>
					<button label="Redefinir valores" name="hmd_config_debug_hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Cancelar" name="hmd_config_debug_hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Salvar" name="hmd_config_debug_hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
