<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config" title="HMD-Konfiguration">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="interpupillary_offset_slider_amount">
						64,0 mm
					</text>
					<slider_bar initial_value="64" name="interpupillary_offset_slider" tool_tip="Konfigurierter Abstand zwischen den Augenmittelpunkten des Benutzers in Millimeter"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_shape_preset_value">
						Standard
					</text>
					<slider_bar initial_value="1,0" name="uisurface_shape_preset_slider" tool_tip="Form der UI-Oberfläche im HMD-Modus"/>
				</layout_panel>
				<layout_panel>
					<text name="ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600,0" name="ui_magnification_slider" tool_tip="UI-Vergrößerung bei Standardabstand zwischen Auge und Bildschirm"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_offset_depth_slider_amount">
						0,0
					</text>
					<slider_bar initial_value="0,0" name="uisurface_offset_depth_slider" tool_tip="Vorwärtsversatz für UI-Oberfläche"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="Werte zurücksetzen" name="hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Abbrechen" name="hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Speichern" name="hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
