<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config_debug" title="HMD-Konfiguration debuggen">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="hmd_config_debug_interpupillary_offset_slider_amount">
						64,0 mm
					</text>
					<slider_bar initial_value="64" name="hmd_config_debug_interpupillary_offset_slider" tool_tip="Konfigurierter Abstand zwischen den Augenmittelpunkten des Benutzers in Millimeter"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_shape_preset_value">
						1
					</text>
					<slider_bar initial_value="1.0" name="hmd_config_debug_uisurface_shape_preset_slider" tool_tip="Form der UI-Oberfläche im HMD-Modus"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600,0" name="hmd_config_debug_ui_magnification_slider" tool_tip="UI-Vergrößerung bei Standardabstand zwischen Auge und Bildschirm"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_offset_depth_slider_amount">
						0,0
					</text>
					<slider_bar initial_value="0,0" name="hmd_config_debug_uisurface_offset_depth_slider" tool_tip="Vorwärtsversatz für UI-Oberfläche"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_radius_width_slider_amount">
						0,3
					</text>
					<slider_bar initial_value="0,3" name="hmd_config_debug_uisurface_toroid_radius_width_slider" tool_tip="Toroidradius (Breite)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_radius_depth_slider_amount">
						0,6
					</text>
					<slider_bar initial_value="0,6" name="hmd_config_debug_uisurface_toroid_radius_depth_slider" tool_tip="Toroidradius (Tiefe)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_cross_section_radius_width_slider_amount">
						0,5
					</text>
					<slider_bar initial_value="0,5" name="hmd_config_debug_uisurface_toroid_cross_section_radius_width_slider" tool_tip="Toroid-Querschnittsradius (Breite)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_cross_section_radius_height_slider_amount">
						0,7
					</text>
					<slider_bar initial_value="0,7" name="hmd_config_debug_uisurface_toroid_cross_section_radius_height_slider" tool_tip="Toroid-Querschnittsradius (Höhe)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_arc_horizontal_slider_amount">
						1,0 PI
					</text>
					<slider_bar initial_value="1,0" name="hmd_config_debug_uisurface_toroid_arc_horizontal_slider" tool_tip="UI-Oberflächenbogen (horizontal)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_arc_vertical_slider_amount">
						0,7
					</text>
					<slider_bar initial_value="0,6" name="hmd_config_debug_uisurface_toroid_arc_vertical_slider" tool_tip="UI-Oberflächenbogen (vertikal)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_eye_to_screen_distance_slider_amount">
						41,0 mm
					</text>
					<slider_bar initial_value="41" name="hmd_config_debug_eye_to_screen_distance_slider" tool_tip="Abstand zwischen Auge und Bildschirmoberfläche in Millimeter"/>
				</layout_panel>
				<layout_panel>
					<check_box initial_value="true" name="hmd_config_debug_hmd_motion_prediction" tool_tip="Die Bewegungsprognose versucht, die Headset-Bewegung vorherzusehen, um eine glattere Darstellung zu ermöglichen."/>
					<text name="hmd_config_debug_motion_prediction_delta_slider_amount">
						30 ms
					</text>
					<slider_bar initial_value="30" name="hmd_config_debug_motion_prediction_delta_slider" tool_tip="Gibt den gewünschten Prognosewert an (in Millisekunden). Dieser sollte in der Regel unter der durchschnittlichen Darstellungslatenz liegen."/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="Voreinstellung hinzufügen" name="hmd_config_debug_hmd_add_preset"/>
				</layout_panel>
				<layout_panel>
					<button label="Voreinstellung entfernen" name="hmd_config_debug_hmd_remove_preset"/>
				</layout_panel>
				<layout_panel>
					<button label="Werte zurücksetzen" name="hmd_config_debug_hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Abbrechen" name="hmd_config_debug_hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Speichern" name="hmd_config_debug_hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
