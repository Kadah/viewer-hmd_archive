<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config_debug" title="頭戴顯示器設定除錯">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="hmd_config_debug_interpupillary_offset_slider_amount">
						64.0 mm
					</text>
					<slider_bar initial_value="64" name="hmd_config_debug_interpupillary_offset_slider" tool_tip="設定使用者雙眼間距（以公釐mm計）"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_shape_preset_value">
						1
					</text>
					<slider_bar initial_value="1.0" name="hmd_config_debug_uisurface_shape_preset_slider" tool_tip="頭戴顯示器模式下的使用者介面形狀"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600.0" name="hmd_config_debug_ui_magnification_slider" tool_tip="以預設眼至螢幕距離放大使用者介面"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_offset_depth_slider_amount">
