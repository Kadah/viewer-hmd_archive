<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config" title="頭戴顯示器設定">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="interpupillary_offset_slider_amount">
						64.0 mm
					</text>
					<slider_bar initial_value="64" name="interpupillary_offset_slider" tool_tip="設定使用者雙眼間距（以公釐mm計）"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_shape_preset_value">
						預設
					</text>
					<slider_bar initial_value="1.0" name="uisurface_shape_preset_slider" tool_tip="頭戴顯示器模式下的使用者介面形狀"/>
				</layout_panel>
				<layout_panel>
					<text name="ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600.0" name="ui_magnification_slider" tool_tip="以預設眼至螢幕距離放大使用者介面"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_offset_depth_slider_amount">
						0.0
					</text>
					<slider_bar initial_value="0.0" name="uisurface_offset_depth_slider" tool_tip="使用者介面表面的向前偏距"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="重設數值" name="hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="取消" name="hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="儲存" name="hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
