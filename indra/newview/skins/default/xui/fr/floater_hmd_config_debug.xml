<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config_debug" title="Débogage de la configuration HMD">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="hmd_config_debug_interpupillary_offset_slider_amount">
						64,0 mm
					</text>
					<slider_bar initial_value="64" name="hmd_config_debug_interpupillary_offset_slider" tool_tip="Distance configurée entre le centre des yeux de l&apos;utilisateur, en millimètres"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_shape_preset_value">
						1
					</text>
					<slider_bar initial_value="1,0" name="hmd_config_debug_uisurface_shape_preset_slider" tool_tip="Forme de la surface de l&apos;interface en mode HMD"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600,0" name="hmd_config_debug_ui_magnification_slider" tool_tip="Agrandissement de l&apos;interface à la distance œil-écran par défaut"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_offset_depth_slider_amount">
						0,0
					</text>
					<slider_bar initial_value="0,0" name="hmd_config_debug_uisurface_offset_depth_slider" tool_tip="Décalage avant pour la surface de l&apos;interface"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_radius_width_slider_amount">
						0,3
					</text>
					<slider_bar initial_value="0,3" name="hmd_config_debug_uisurface_toroid_radius_width_slider" tool_tip="Rayon toroïdal (largeur)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_radius_depth_slider_amount">
						0,6
					</text>
					<slider_bar initial_value="0,6" name="hmd_config_debug_uisurface_toroid_radius_depth_slider" tool_tip="Rayon toroïdal (profondeur)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_cross_section_radius_width_slider_amount">
						0,5
					</text>
					<slider_bar initial_value="0,5" name="hmd_config_debug_uisurface_toroid_cross_section_radius_width_slider" tool_tip="Rayon transversal toroïdal (largeur)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_cross_section_radius_height_slider_amount">
						0,7
					</text>
					<slider_bar initial_value="0,7" name="hmd_config_debug_uisurface_toroid_cross_section_radius_height_slider" tool_tip="Rayon transversal toroïdal (hauteur)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_arc_horizontal_slider_amount">
						1,0 PI
					</text>
					<slider_bar initial_value="1,0" name="hmd_config_debug_uisurface_toroid_arc_horizontal_slider" tool_tip="Arc de la surface de l&apos;interface (horizontal)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_uisurface_toroid_arc_vertical_slider_amount">
						0,7
					</text>
					<slider_bar initial_value="0,6" name="hmd_config_debug_uisurface_toroid_arc_vertical_slider" tool_tip="Arc de la surface de l&apos;interface (vertical)"/>
				</layout_panel>
				<layout_panel>
					<text name="hmd_config_debug_eye_to_screen_distance_slider_amount">
						41,0 mm
					</text>
					<slider_bar initial_value="41" name="hmd_config_debug_eye_to_screen_distance_slider" tool_tip="Distance de l&apos;œil à la surface de l&apos;écran, en millimètres"/>
				</layout_panel>
				<layout_panel>
					<check_box initial_value="true" name="hmd_config_debug_hmd_motion_prediction" tool_tip="La prédiction du mouvement essaie de prévoir le mouvement du casque pour fournir une expérience plus fluide et moins saccadée."/>
					<text name="hmd_config_debug_motion_prediction_delta_slider_amount">
						30 ms
					</text>
					<slider_bar initial_value="30" name="hmd_config_debug_motion_prediction_delta_slider" tool_tip="Spécifie la prédiction à appliquer en millisecondes. Généralement inférieure à la latence de rendu moyenne."/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="Ajouter un préréglage" name="hmd_config_debug_hmd_add_preset"/>
