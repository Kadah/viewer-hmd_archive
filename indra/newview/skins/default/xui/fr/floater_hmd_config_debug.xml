				<layout_panel>
					<button label="Supprimer un préréglage" name="hmd_config_debug_hmd_remove_preset"/>
				</layout_panel>
				<layout_panel>
					<button label="Réinitialiser les valeurs" name="hmd_config_debug_hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Annuler" name="hmd_config_debug_hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Enregistrer" name="hmd_config_debug_hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
