<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config" title="Configuration HMD">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="interpupillary_offset_slider_amount">
						64,0 mm
					</text>
					<slider_bar initial_value="64" name="interpupillary_offset_slider" tool_tip="Distance configurée entre le centre des yeux de l&apos;utilisateur, en millimètres"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_shape_preset_value">
						Valeur par défaut
					</text>
					<slider_bar initial_value="1,0" name="uisurface_shape_preset_slider" tool_tip="Forme de la surface de l&apos;interface en mode HMD"/>
				</layout_panel>
				<layout_panel>
					<text name="ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600,0" name="ui_magnification_slider" tool_tip="Agrandissement de l&apos;interface à la distance œil-écran par défaut"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_offset_depth_slider_amount">
						0,0
					</text>
					<slider_bar initial_value="0,0" name="uisurface_offset_depth_slider" tool_tip="Décalage avant pour la surface de l&apos;interface"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="Réinitialiser les valeurs" name="hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Annuler" name="hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Enregistrer" name="hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
