<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config" title="HMD Yapılandırması">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="interpupillary_offset_slider_amount">
						64,0 mm
					</text>
					<slider_bar initial_value="64" name="interpupillary_offset_slider" tool_tip="Milimetre cinsinden kullanıcının göz merkezleri arasında yapılandırılan mesafe"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_shape_preset_value">
						Varsayılan
					</text>
					<slider_bar initial_value="1,0" name="uisurface_shape_preset_slider" tool_tip="KA yüzeyinin HMD Modunda şekli"/>
				</layout_panel>
				<layout_panel>
					<text name="ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600,0" name="ui_magnification_slider" tool_tip="Varsayılan Göz-Ekran mesafesinde KA Büyütmesi"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_offset_depth_slider_amount">
						0,0
					</text>
					<slider_bar initial_value="0,0" name="uisurface_offset_depth_slider" tool_tip="KA Yüzeyi için Dengeleyiciyi Yönlendir"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="Değerleri Sıfırla" name="hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="İptal" name="hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Kaydet" name="hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
