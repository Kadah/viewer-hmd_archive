<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel
  follows="left|right|bottom"
  visible="true"
  border="false"
  chrome="true"
  width="512"
  height="200"
  layout="topleft"
  name="hmd_config">
  <layout_stack
    left="0"
    top="0"
    layout="topleft"
    height="200"
    follows="all"
    orientation="horizontal">
    <layout_panel
      height="200"
      width="1" />
    <layout_panel
      height="200"
      auto_resize="false"
      width="500">
      <layout_stack
        left="0"
        border_size="0"
        top="0"
        layout="topleft"
        height="200"
        follows="all"
        orientation="vertical">
        <layout_panel
         height="50"
         auto_resize="false"
         width="500">
          <layout_stack
            border_size="0"
            left="0"
            top="0"
            height="50"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="500"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="300"
                left="0"
                text_color="white"
                halign="center">
Interpupillary Distance
              </text>
              <text
                name="interpupillary_offset_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="70"
                left="320"
                text_color="white"
                halign="right">
64.0 mm
              </text>
              <slider_bar
                top_delta="18"
                min_val="0"
                max_val="100"
                increment="0.5"
                initial_value="64"
                name="interpupillary_offset_slider"
                tool_tip="Configured distance between the user's eye centers, in millimeters"
                left="5"
                width="390">
                <slider_bar.commit_callback
                  function="HMDConfig.SetInterpupillaryOffset" />
              </slider_bar>
              <button
                height="23"
                label="Calibrate"
                left="405"
                name="hmd_calibrate_button"
                follows="top|left"
                top="10"
                width="90">
                <commit_callback
                  function="HMDConfig.Calibrate" />
              </button>
            </layout_panel>
          </layout_stack>
        </layout_panel>
        <layout_panel
         height="50"
         auto_resize="false"
         width="500">
          <layout_stack
            border_size="0"
            top="0"
            height="50"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="500"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="300"
                left="0"
                text_color="white"
                halign="center">
Eye to Screen Distance (FOV)
              </text>
              <text
                name="eye_to_screen_distance_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="70"
                left="320"
                text_color="white"
                halign="right">
41.0 mm
              </text>
              <slider_bar
                top_delta="18"
                min_val="0"
                max_val="100"
                increment=".1"
                initial_value="41"
                name="eye_to_screen_distance_slider"
                tool_tip="Distance from the eye to screen surface, in millimeters"
                left="5"
                width="390">
                <slider_bar.commit_callback
                  function="HMDConfig.SetEyeToScreenDistance" />
              </slider_bar>
              <button
                height="23"
                label="Reset Values"
                left="405"
                name="hmd_reset_values_button"
                follows="top|left"
                top="10"
                width="90">
                <commit_callback
                  function="HMDConfig.ResetValues" />
              </button>
            </layout_panel>
          </layout_stack>
        </layout_panel>
        <layout_panel
         height="100"
         auto_resize="false"
         width="500">
          <layout_stack
            border_size="0"
            top="0"
            height="100"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="500"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="100"
                left="0"
                text_color="white"
                halign="center">
Motion Prediction
              </text>
              <check_box
                height="16"
                follows="top|left"
                left="34"
                initial_value="true"
                name="hmd_motion_prediction"
                top_delta="18"
                tool_tip="Motion prediction attempts to predict headset movement for a smoother, less jerky experience"
                width="32">
                <check_box.commit_callback
                  function="HMDConfig.CheckMotionPrediction" />
              </check_box>
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="240"
                left="100"
                text_color="white"
                halign="center">
Motion Prediction Delta
              </text>
              <text
                name="motion_prediction_delta_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="40"
                left="350"
                text_color="white"
                halign="right">
30 ms
              </text>
              <slider_bar
                top_delta="18"
                min_val="0"
                max_val="100"
                increment="1"
                initial_value="30"
                name="motion_prediction_delta_slider"
                tool_tip="Specifies how much prediction should be applied in milliseconds; it should in general be under the average rendering latency"
                left="105"
                width="290">
                <slider_bar.commit_callback
                  function="HMDConfig.SetMotionPredictionDelta" />
              </slider_bar>
              <button
                height="23"
                label="Cancel"
                left="405"
                name="hmd_cancel_button"
                follows="top|left"
                top="10"
                width="90">
                <commit_callback
                  function="HMDConfig.Cancel" />
              </button>
              <button
                height="23"
                label="Save"
                left="405"
                name="hmd_save_button"
                follows="top|left"
                top="60"
                width="90">
                <commit_callback
                  function="HMDConfig.Save" />
              </button>
            </layout_panel>
          </layout_stack>
        </layout_panel>
      </layout_stack>
    </layout_panel>
    <layout_panel
      height="200"
      width="1" />
  </layout_stack>
</panel>