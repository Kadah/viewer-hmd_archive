                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="300"
                left="0"
                text_color="white"
                halign="center">
UI Surface Offset Depth
              </text>
              <text
                name="uisurface_offset_depth_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="70"
                left="320"
                text_color="white"
                halign="right">
0.0
              </text>
              <slider_bar
                top_delta="18"
                min_val="-1.0"
                max_val="1.0"
                increment="0.01"
                initial_value="0.0"
                name="uisurface_offset_depth_slider"
                tool_tip="Forward Offset for UI Surface"
                left="5"
                width="390">
                <slider_bar.commit_callback
                  function="HMDConfig.SetUISurfaceOffsetDepth" />
              </slider_bar>
            </layout_panel>
          </layout_stack>
        </layout_panel>

        <layout_panel
