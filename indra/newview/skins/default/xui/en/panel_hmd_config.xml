<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel
  follows="all"
  visible="true"
  border="false"
  chrome="true"
  width="1024"
  height="180"
  layout="topleft"
  name="hmd_config">
  <layout_stack
    left="0"
    top="0"
    layout="topleft"
    height="180"
    follows="all"
    orientation="horizontal">
    <layout_panel
      height="180"
      width="1" />
    <layout_panel
      height="180"
      auto_resize="false"
      width="420">
      <layout_stack
        left="0"
        border_size="0"
        top="0"
        layout="topleft"
        height="180"
        follows="all"
        orientation="vertical">
        <layout_panel>
          <layout_stack
            border_size="0"
            left="0"
            top="0"
            height="90"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="140"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="23"
                height="30"
                width="140"
                left="0"
                text_color="white"
                halign="center">
Interpupillary
Distance
              </text>
              <slider_bar
                top_delta="32"
                min_val="0"
                max_val="100"
                increment="1"
                initial_value="64"
                name="interpupillary_offset_slider"
                tool_tip="Configured distance between the user's eye centers, in millimeters"
                left="5"
                width="74">
                <slider_bar.commit_callback
                  function="HMDConfig.SetInterpupillaryOffset" />
              </slider_bar>
            </layout_panel>
            <layout_panel
              width="140"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="10"
                height="30"
                width="140"
                left="0"
                text_color="white"
                halign="center">
Lens
Separation
Distance
              </text>
              <slider_bar
                top_delta="45"
                min_val="0"
                max_val="100"
                increment="0.5"
                initial_value="63.5"
                name="lens_separation_distance_slider"
                tool_tip="Distance (in millimeters) between physical lens centers useful for calculating distortion center"
                left="5"
                width="74">
                <slider_bar.commit_callback
                  function="HMDConfig.SetLensSeparationDistance" />
              </slider_bar>
            </layout_panel>
            <layout_panel
              width="140"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="10"
                height="30"
                width="140"
                left="0"
                text_color="white"
                halign="center">
Eye to
Screen
Distance
              </text>
              <slider_bar
                top_delta="45"
                min_val="0"
                max_val="100"
                increment="1"
                initial_value="41"
                name="eye_to_screen_distance_slider"
                tool_tip="Distance from the eye to screen surface, in millimeters"
                left="5"
                width="74">
                <slider_bar.commit_callback
                  function="HMDConfig.SetEyeToScreenDistance" />
              </slider_bar>
            </layout_panel>
            <layout_panel
              width="140"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="23"
                height="30"
                width="140"
                left="0"
                text_color="white"
                halign="center">
Vertical
FOV
              </text>
              <slider_bar
                top_delta="32"
                min_val="45"
                max_val="135"
                increment="0.5"
                initial_value="90"
                name="vertical_fov_slider"
                tool_tip="Vertical Field of View (in degrees)"
                left="5"
                width="74">
                <slider_bar.commit_callback
                  function="HMDConfig.SetVerticalFOV" />
              </slider_bar>
            </layout_panel>
            <layout_panel
              width="140"
              background_visible="true"
              bg_alpha_color="0.0 0.3 0.3"
              height="90">
              <button
                height="23"
                label="Calibrate"
                left="5"
                name="hmd_calibrate_button"
                follows="top|left"
                top="48"
                width="74">
                <commit_callback
                  function="HMDConfig.Calibrate" />
              </button>
            </layout_panel>
          </layout_stack>
        </layout_panel>
        <layout_panel>
          <layout_stack
            border_size="0"
            top="0"
            height="140"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="140"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="10"
                height="30"
                width="140"
                left="0"
                text_color="white"
                halign="center">
X
Center
Offset
              </text>
              <slider_bar
                top_delta="45"
                min_val="-1"
                max_val="1"
                increment="0.01"
                initial_value="0"
                name="x_center_offset_slider"
                tool_tip="Horizontal offset of the eye from the middle of the head"
                left="5"
                width="74">
                <slider_bar.commit_callback
                  function="HMDConfig.SetXCenterOffset" />
              </slider_bar>
            </layout_panel>
            <layout_panel
              width="140"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="10"
                height="30"
                width="140"
                left="0"
                text_color="white"
                halign="center">
Y
Center
Offset
              </text>
              <slider_bar
                top_delta="45"
                min_val="-1"
                max_val="1"
                increment="0.01"
                initial_value="0"
                name="y_center_offset_slider"
                tool_tip="Vertical offset of the eye from the middle of the head"
                left="5"
                width="74">
                <slider_bar.commit_callback
                  function="HMDConfig.SetYCenterOffset" />
              </slider_bar>
            </layout_panel>
            <layout_panel
              width="140"
              background_visible="true"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="23"
                height="30"
                width="140"
                left="0"
                text_color="white"
                halign="center">
Motion
Prediction
              </text>
              <check_box
                control_name="ConnectionPortEnabled"
                height="16"
                follows="top|left"
                left="34"
                name="connection_port_enabled"
                top_delta="30"
                tool_tip="Motion prediction attempts to predict headset movement for a smoother, less jerky experience"
                width="32">
                <check_box.commit_callback
                  function="HMDConfig.SetMotionPrediction" />
              </check_box>
            </layout_panel>
            <layout_panel
              width="140"
              background_visible="true"
              bg_alpha_color="0.0 0.3 0.3">
              <button
                height="23"
                label="Cancel"
                left="5"
                name="hmd_cancel_button"
                follows="top|left"
                top="48"
                width="74">
                <commit_callback
                  function="HMDConfig.Cancel" />
              </button>
            </layout_panel>
            <layout_panel
              width="140"
              background_visible="true"
              bg_alpha_color="0.0 0.3 0.3">
              <button
                height="23"
                label="Save"
                left="5"
                name="hmd_save_button"
                follows="top|left"
                top="48"
                width="74">
                <commit_callback
                  function="HMDConfig.Save" />
              </button>
            </layout_panel>
          </layout_stack>
        </layout_panel>
      </layout_stack>
    </layout_panel>
    <layout_panel
      height="180"
      width="1" />
  </layout_stack>
</panel>