                height="10"
                width="300"
                left="0"
                text_color="white"
                halign="center">
Toroid Cross-Section Radius (Width)
              </text>
              <text
                name="uisurface_toroid_cross_section_radius_width_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="70"
                left="320"
                text_color="white"
                halign="right">
0.5
              </text>
              <slider_bar
                top_delta="18"
                min_val="0.1"
                max_val="10.0"
                increment="0.1"
                initial_value="0.5"
                name="uisurface_toroid_cross_section_radius_width_slider"
                tool_tip="Toroid Cross-Section Radius (Width)"
                left="5"
                width="390">
                <slider_bar.commit_callback
                  function="HMDConfig.SetUISurfaceToroidCrossSectionRadiusWidth" />
              </slider_bar>
            </layout_panel>
          </layout_stack>
        </layout_panel>

        <layout_panel
         height="40"
         auto_resize="false"
         width="400">
          <layout_stack
            border_size="0"
            top="0"
            height="40"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="400"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
