<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel
  follows="left|right|bottom"
  visible="true"
  border="false"
  chrome="true"
  width="512"
  height="440"
  layout="topleft"
  name="hmd_config">
  <layout_stack
    left="0"
    top="0"
    layout="topleft"
    height="440"
    follows="all"
    orientation="horizontal">
    <layout_panel
      height="440"
      width="1" />
    <layout_panel
      height="440"
      auto_resize="false"
      width="400">
      <layout_stack
        left="0"
        border_size="0"
        top="0"
        layout="topleft"
        height="440"
        follows="all"
        orientation="vertical">

        <layout_panel
         height="40"
         auto_resize="false"
         width="400">
          <layout_stack
            border_size="0"
            left="0"
            top="0"
            height="40"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="400"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="300"
                left="0"
                text_color="white"
                halign="center">
Interpupillary Distance
              </text>
              <text
                name="interpupillary_offset_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="70"
                left="320"
                text_color="white"
                halign="right">
64.0 mm
              </text>
              <slider_bar
                top_delta="18"
                min_val="50"
                max_val="75"
                increment="0.1"
                initial_value="64"
                name="interpupillary_offset_slider"
                tool_tip="Configured distance between the user's eye centers, in millimeters"
                left="5"
                width="390">
                <slider_bar.commit_callback
                  function="HMDConfig.SetInterpupillaryOffset" />
              </slider_bar>
            </layout_panel>
          </layout_stack>
        </layout_panel>
        
        <layout_panel
         height="40"
         auto_resize="false"
         width="400">
          <layout_stack
            border_size="0"
            top="0"
            height="40"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="400"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="300"
                left="0"
                text_color="white"
                halign="center">
Eye to Screen Distance (FOV)
              </text>
              <text
                name="eye_to_screen_distance_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="70"
                left="320"
                text_color="white"
                halign="right">
41.0 mm
              </text>
              <slider_bar
                top_delta="18"
                min_val="0"
                max_val="100"
                increment=".1"
                initial_value="41"
                name="eye_to_screen_distance_slider"
                tool_tip="Distance from the eye to screen surface, in millimeters"
                left="5"
                width="390">
                <slider_bar.commit_callback
                  function="HMDConfig.SetEyeToScreenDistance" />
              </slider_bar>
            </layout_panel>
          </layout_stack>
        </layout_panel>
        
        <layout_panel
         height="40"
         auto_resize="false"
         width="400">
          <layout_stack
            border_size="0"
            top="0"
            height="40"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="400"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="100"
                left="0"
                text_color="white"
                halign="center">
Motion Prediction
              </text>
              <check_box
                height="16"
                follows="top|left"
                left="34"
                initial_value="true"
                name="hmd_motion_prediction"
                top_delta="18"
                tool_tip="Motion prediction attempts to predict headset movement for a smoother, less jerky experience"
                width="32">
                <check_box.commit_callback
                  function="HMDConfig.CheckMotionPrediction" />
              </check_box>
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="240"
                left="100"
                text_color="white"
                halign="center">
Motion Prediction Delta
              </text>
              <text
                name="motion_prediction_delta_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="40"
                left="350"
                text_color="white"
                halign="right">
30 ms
              </text>
              <slider_bar
                top_delta="18"
                min_val="0"
                max_val="100"
                increment="1"
                initial_value="30"
                name="motion_prediction_delta_slider"
                tool_tip="Specifies how much prediction should be applied in milliseconds; it should in general be under the average rendering latency"
                left="105"
                width="290">
                <slider_bar.commit_callback
                  function="HMDConfig.SetMotionPredictionDelta" />
              </slider_bar>
            </layout_panel>
          </layout_stack>
        </layout_panel>

        <layout_panel
         height="40"
         auto_resize="false"
         width="400">
          <layout_stack
            border_size="0"
            left="0"
            top="0"
