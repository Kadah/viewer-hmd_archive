        <layout_panel
         height="40"
         auto_resize="false"
         width="400">
          <layout_stack
            border_size="0"
            top="0"
            height="40"
            follows="all"
            orientation="horizontal">
            <layout_panel
              width="400"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="300"
                left="0"
                text_color="white"
                halign="center">
UI Magnification
              </text>
              <text
                name="ui_magnification_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="70"
                left="320"
                text_color="white"
                halign="right">
600
              </text>
              <slider_bar
                top_delta="18"
                min_val="0.0"
                max_val="1000"
                increment="10.0"
                initial_value="600.0"
                name="ui_magnification_slider"
                tool_tip="UI Magnification at default Eye-To-Screen distance"
                left="5"
                width="390">
                <slider_bar.commit_callback
                  function="HMDConfig.SetUIMagnification" />
              </slider_bar>
            </layout_panel>
          </layout_stack>
        </layout_panel>

      </layout_stack>
    </layout_panel>
    
    <layout_panel
      height="440"
      auto_resize="false"
      width="100">
      <layout_stack
        left="0"
        border_size="0"
        top="0"
        layout="topleft"
        height="440"
        follows="all"
        orientation="vertical">
        <layout_panel
          width="100"
          text_color="white"
          background_visible="true"
          follows="all"
          bg_alpha_color="0.0 0.3 0.3">
          <button
            height="23"
            label="View World"
            left="5"
            name="hmd_toggle_world_view_button"
            follows="top|left"
            top="10"
            width="90">
            <commit_callback
              function="HMDConfig.ToggleWorldView" />
          </button>
          <button
            height="23"
            label="Calibrate"
            left="5"
            name="hmd_calibrate_button"
            follows="top|left"
            top="50"
            width="90">
            <commit_callback
              function="HMDConfig.Calibrate" />
          </button>
          <button
            height="23"
            label="Reset Values"
            left="5"
            name="hmd_reset_values_button"
            follows="top|left"
            top="90"
            width="90">
            <commit_callback
              function="HMDConfig.ResetValues" />
          </button>
          <button
            height="23"
            label="Cancel"
            left="5"
            name="hmd_cancel_button"
            follows="top|left"
            top="130"
            width="90">
            <commit_callback
              function="HMDConfig.Cancel" />
          </button>
          <button
            height="23"
            label="Save"
            left="5"
            name="hmd_save_button"
            follows="top|left"
            top="170"
            width="90">
            <commit_callback
              function="HMDConfig.Save" />
          </button>
        </layout_panel>
      </layout_stack>
    </layout_panel>
    
    <layout_panel
      height="440"
      width="1" />
  </layout_stack>
</panel>