            <layout_panel
              width="400"
              text_color="white"
              background_visible="true"
              follows="all"
              bg_alpha_color="0.0 0.3 0.3">
              <text
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="300"
                left="0"
                text_color="white"
                halign="center">
UI Surface Arc (Horizontal)
              </text>
              <text
                name="uisurface_toroid_arc_horizontal_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="70"
                left="320"
                text_color="white"
                halign="right">
1.0 PI
              </text>
              <slider_bar
                top_delta="18"
                min_val="0.1"
                max_val="1.5"
                increment="0.01"
                initial_value="1.0"
                name="uisurface_toroid_arc_horizontal_slider"
                tool_tip="UI Surface Arc (Horizontal)"
                left="5"
                width="390">
                <slider_bar.commit_callback
                  function="HMDConfig.SetUISurfaceToroidArcHorizontal" />
              </slider_bar>
            </layout_panel>
          </layout_stack>
        </layout_panel>

        <layout_panel
