                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="40"
                left="350"
                text_color="white"
                halign="right">
0.6
              </text>
              <slider_bar
                top_delta="18"
                min_val="0.1"
                max_val="10.0"
                increment="0.1"
                initial_value="0.6"
                name="uisurface_toroid_radius_depth_slider"
                tool_tip="Toroid Radius (Depth)"
                left="5"
                width="390">
                <slider_bar.commit_callback
