                top="5"
                height="10"
                width="300"
                left="0"
                text_color="white"
                halign="center">
Toroid Cross-Section Radius (Height)
              </text>
              <text
                name="uisurface_toroid_cross_section_radius_height_slider_amount"
                follows="all"
                font.name="SansSerifSmall"
                top="5"
                height="10"
                width="40"
                left="350"
                text_color="white"
                halign="right">
0.7
              </text>
              <slider_bar
                top_delta="18"
                min_val="0.1"
                max_val="10.0"
                increment="0.1"
                initial_value="0.7"
                name="uisurface_toroid_cross_section_radius_height_slider"
                tool_tip="Toroid Cross-Section Radius (Height)"
                left="5"
                width="390">
                <slider_bar.commit_callback
                  function="HMDConfig.SetUISurfaceToroidCrossSectionRadiusHeight" />
              </slider_bar>
            </layout_panel>
          </layout_stack>
        </layout_panel>

