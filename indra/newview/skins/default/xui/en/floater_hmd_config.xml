<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater
  name="floater_hmd_config"
  title="HMD Configuration"
  can_resize="true"
  can_minimize="true"
  can_close="true"
  save_visibility="false"
  single_instance="true"
  layout="topleft"
  min_height="240"
  min_width="520"
  width="520"
  height="240">

  <layout_stack
    layout="topleft"
    follows="all"
    orientation="horizontal"
    width="520"
    height="240"
    min_width="520"
    min_height="240">
    <layout_panel
      follows="all"
      left="0"
      top="0"
      height="240"
      width="400"
      min_width="400"
      min_height="240">
      
      <layout_stack
        layout="topleft"
        follows="top|left|right"
        border_size="0"
        left="0"
        top="0"
        height="200"
        width="400"
        min_width="400"
        min_height="200"        
        orientation="vertical">

        <layout_panel
          follows="left|right"
          height="45"
          width="400"
          min_height="45"
          text_color="white">
          <text
            font.name="SansSerifSmall"
            top="5"
            height="10"
            follows="left|right"
            halign="center">
Interpupillary Distance
          </text>
          <text
            name="interpupillary_offset_slider_amount"
            font.name="SansSerifSmall"
            top="5"
            right="-15"
            height="10"
            width="70"
            follows="right"
            halign="right">
64.0 mm
          </text>
          <slider_bar
            name="interpupillary_offset_slider"
            tool_tip="Configured distance between the user's eye centers, in millimeters"
            min_val="50"
            max_val="75"
            increment="0.1"
            initial_value="64"
            top="18"
            height="22"
            left="15"
            right="-5"
            follows="left|right">
            <slider_bar.commit_callback function="HMDConfig.SetInterpupillaryOffset" />
          </slider_bar>
        </layout_panel>

        <layout_panel
          follows="left|right"
          height="45"
          width="400"
          min_height="45"
          text_color="white">
          <text
            font.name="SansSerifSmall"
            top="5"
            height="10"
            follows="left|right"
            halign="center">
UI Surface Shape Preset
          </text>
          <text
            name="uisurface_shape_preset_value"
            font.name="SansSerifSmall"
            top="5"
            right="-15"
            height="10"
            width="70"
            follows="right"
            halign="right">
Default
          </text>
          <slider_bar
            name="uisurface_shape_preset_slider"
            tool_tip="Shape of the UI surface in HMD Mode"
            min_val="0.0"
            max_val="4.0"
            increment="1.0"
            initial_value="1.0"
            top="18"
            height="22"
            left="15"
            right="-5"
            follows="left|right">
            <slider_bar.commit_callback function="HMDConfig.SetUIShapePreset" />
          </slider_bar>
        </layout_panel>

        <layout_panel
          follows="left|right"
          height="45"
          width="400"
          min_height="45"
          text_color="white">
          <text
            font.name="SansSerifSmall"
            top="5"
            height="10"
            follows="left|right"
            halign="center">
UI Magnification
          </text>
          <text
            name="ui_magnification_slider_amount"
            font.name="SansSerifSmall"
            top="5"
            right="-15"
            height="10"
            width="70"
            follows="right"
            halign="right">
600
          </text>
          <slider_bar
            name="ui_magnification_slider"
            tool_tip="UI Magnification at default Eye-To-Screen distance"
            min_val="0.0"
            max_val="1000"
            increment="10.0"
            initial_value="600.0"
            top="18"
            height="22"
            left="15"
            right="-5"
            follows="left|right">
            <slider_bar.commit_callback function="HMDConfig.SetUIMagnification" />
          </slider_bar>
        </layout_panel>

        <layout_panel
          follows="left|right"
          height="45"
          width="400"
          min_height="45"
          text_color="white">
          <text
            font.name="SansSerifSmall"
            top="5"
            height="10"
            follows="left|right"
            halign="center">
UI Surface Offset Depth
          </text>
          <text
            name="uisurface_offset_depth_slider_amount"
            font.name="SansSerifSmall"
            top="5"
            right="-15"
            height="10"
            width="70"
            follows="right"
            halign="right">
0.0
          </text>
          <slider_bar
            name="uisurface_offset_depth_slider"
            tool_tip="Forward Offset for UI Surface"
            min_val="-1.0"
            max_val="1.0"
            increment="0.01"
            initial_value="0.0"
            top="18"
            height="22"
            left="15"
            right="-5"
            follows="left|right">
            <slider_bar.commit_callback function="HMDConfig.SetUISurfaceOffsetDepth" />
          </slider_bar>
        </layout_panel>
          
      </layout_stack>
    </layout_panel>
      
    <layout_panel
      follows="top|right"
      auto_resize="false"
      top="0"
      right="-10"
      width="110"
      height="200"
      min_width="110"
      min_height="200">
      <layout_stack
        orientation="vertical"
        layout="topleft"
        follows="top|left|right"
        left="5"
        top="5"
        width="90"
        height="200"
        min_width="110"
        min_height="200">
        <layout_panel
          auto_resize="false"
          text_color="white"
          height="25"
          width="90">
          <button
            name="hmd_calibrate_button"
            label="Calibrate"
            follows="all">
            <commit_callback function="HMDConfig.Calibrate" />
          </button>
        </layout_panel>
        <layout_panel
          auto_resize="false"
          text_color="white"
          height="25"
          width="90">
          <button
            name="hmd_reset_values_button"
            label="Reset Values"
            follows="all">
            <commit_callback function="HMDConfig.ResetValues" />
          </button>
        </layout_panel>
        <layout_panel
          auto_resize="false"
          text_color="white"
          height="25"
          width="90">
          <button
            name="hmd_cancel_button"
            label="Cancel"
            follows="all">
            <commit_callback function="HMDConfig.Cancel" />
          </button>
        </layout_panel>
        <layout_panel
          auto_resize="false"
          text_color="white"
          height="25"
          width="90">
          <button
            name="hmd_save_button"
            label="Save"
            follows="all">
            <commit_callback function="HMDConfig.Save" />
          </button>
        </layout_panel>
      </layout_stack>
    </layout_panel>
  </layout_stack>
</floater>
