<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config" title="Конфигурация ГД">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="interpupillary_offset_slider_amount">
						64.0 мм
					</text>
					<slider_bar initial_value="64" name="interpupillary_offset_slider" tool_tip="Заданное расстояние между центрами глаз пользователя в миллиметрах"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_shape_preset_value">
						По умолчанию
					</text>
					<slider_bar initial_value="1.0" name="uisurface_shape_preset_slider" tool_tip="Форма поверхности интерфейса в режиме ГД"/>
				</layout_panel>
				<layout_panel>
					<text name="ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600.0" name="ui_magnification_slider" tool_tip="Увеличение интерфейса при стандартном расстоянии глаз-экран"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_offset_depth_slider_amount">
						0.0
					</text>
					<slider_bar initial_value="0.0" name="uisurface_offset_depth_slider" tool_tip="Смещение поверхности интерфейса вперед"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="Сброс значений" name="hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Отмена" name="hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="Сохранить" name="hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
