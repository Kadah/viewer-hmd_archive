<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="floater_hmd_config" title="HMD 設定">
	<layout_stack>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<text name="interpupillary_offset_slider_amount">
						64.0 mm
					</text>
					<slider_bar initial_value="64" name="interpupillary_offset_slider" tool_tip="ユーザーの両目の中心の間の設定された間隔 (mm)"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_shape_preset_value">
						デフォルト
					</text>
					<slider_bar initial_value="1.0" name="uisurface_shape_preset_slider" tool_tip="HMD モードの UI 面の形状"/>
				</layout_panel>
				<layout_panel>
					<text name="ui_magnification_slider_amount">
						600
					</text>
					<slider_bar initial_value="600.0" name="ui_magnification_slider" tool_tip="デフォルトの目から画面までの間隔での UI 倍率"/>
				</layout_panel>
				<layout_panel>
					<text name="uisurface_offset_depth_slider_amount">
						0.0
					</text>
					<slider_bar initial_value="0.0" name="uisurface_offset_depth_slider" tool_tip="UI 面のフォワードオフセット"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
		<layout_panel>
			<layout_stack>
				<layout_panel>
					<button label="値をリセット" name="hmd_reset_values_button"/>
				</layout_panel>
				<layout_panel>
					<button label="取り消し" name="hmd_cancel_button"/>
				</layout_panel>
				<layout_panel>
					<button label="保存" name="hmd_save_button"/>
				</layout_panel>
			</layout_stack>
		</layout_panel>
	</layout_stack>
</floater>
